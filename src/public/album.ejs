<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <%- include('snippets/head.ejs'); %>
    <title>Waifuvault|Album</title>
    <link rel="stylesheet" href="/assets/custom/css/album.css">
    <link rel="stylesheet" href="/assets/vendor/lightgalleryjs/css/lightgallery-bundle.min.css">
    <script src="/assets/vendor/lightgalleryjs/js/lightgallery.min.js"></script>
    <script src="/assets/vendor/lightgalleryjs/plugins/lg-video.min.js"></script>
</head>
<body>
<div>
    <div id="overlay" class="hidden">
        <div id="loader" class="hidden"></div>
    </div>
</div>
<div class="container mt-4">
    <div class="row">
        <div class="col-md-12 pb-4">
            <h1><span id="albumName"></span></h1>
        </div>
    </div>
    <div class="row" id="albumViewControls">
        <div class="col-md-12 pb-2">
            <button id="cardView" class="btn btn-outline-primary ms-1"><i class="bi bi-table"></i></button>
            <button id="tableView" class="btn btn-outline-primary ms-1"><i class="bi bi-list"></i></button>
            <% if (albumTooBigToDownload){ %>
                <button id="downloadFiles" class="btn btn-outline-primary ms-1 disabled" disabled>Album too large to download</button>
            <% }else{ %>
                <button id="downloadFiles" class="btn btn-outline-primary ms-1">Download Album as Zip</button>
            <% } %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table" id="albumFiles">
                    <thead>
                    <tr>
                        <th scope="col"><i class="bi bi-cloud-arrow-down-fill"></i></th>
                        <th scope="col">Filename</th>
                        <th scope="col">Size</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
    <div id="albumCards"></div>
</div>
<%- include('snippets/scripts.ejs'); %>
<script>
    const publicToken = "<%= publicToken %>";
    const albumTooBigToDownload = <%= albumTooBigToDownload %>;
</script>
<script src="/assets/custom/js/album.js"></script>
</body>
</html>

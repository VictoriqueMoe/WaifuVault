            function getButtons(type) {
                const buttons = [];
                if (type === "entries") {
                    buttons.push({
                            extend: "selected",
                            text: "Delete file",
                            attr: { id: "deleteFilesButton" },
                            action: async (e, dt) => {
                                async function yes() {
                                    const idArr = [];
                                    dt.rows({ selected: true }).every(function() {
                                        const data = this.data();
                                        idArr.push(data.id);
                                    });
                                    await deleteEntry(idArr);
                                    reloadTable(["entries"]);

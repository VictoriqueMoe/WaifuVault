                                    ["Expires", selectedRow.expires ?? "N/A"],
                                    ["IP", selectedRow.ip],
                                    ["URL", selectedRow.url],
                                    ["Bucket", selectedRow.bucket ?? "N/A"]
                                ];
                                addDetailInfo(detailArr);
                                detailsModal.show();
                            }
                        },
                        {
                            extend: "selectedSingle",
                            text: "Download file",
                            attr: { id: "downloadFileButton" },
                            action: async (e, dt) => {
